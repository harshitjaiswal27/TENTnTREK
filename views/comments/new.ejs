<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add new comment to <%= campground.title %></h1>
        <div style="width: 30%;margin: auto; padding: 40px;">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST" >
                <div class="form-group">
                    <input type="text" name="comment[text]" id="" class="form-control" placeholder="text">
                </div>
                <div class="form-group">
                    <input type="text" name="comment[author]" id="" placeholder="author" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
                <a href="/campgrounds/<%= campground._id %>">Go Back</a>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>