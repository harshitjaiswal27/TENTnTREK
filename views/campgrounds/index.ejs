<%- include("../partials/header") %>


<div class="container">

<header class="jumbotron">
    <div class="container">
        <h1>Welcome to TENTnTREK!</h1>
        <p>View your hand-picked campground from all over the world</p>
        <a href="/campgrounds/new" class="btn btn-primary btn-large">Add new Campground</a>
    </div>
</header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(record){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= record.img %>" alt="" >
                    <div class="caption">
                        <h3><%= record.title %></h3>   
                    </div>
                    <p>
                        <a href="/campgrounds/<%= record._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% });%>
    </div>
</div>



<%- include("../partials/footer") %>