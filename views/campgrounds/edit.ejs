<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.title %></h1>
        <div style="width: 30%;margin: auto; padding: 40px;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST" >
                <div class="form-group">
                    <input type="text" name="campground[title]" id="" class="form-control" value="<%= campground.title %>"">
                </div>
                <div class="form-group">
                    <input type="text" name="campground[img]" id="" value="<%= campground.img %>"" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="campround[description]" id="" value="<%= campground.description %>"" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>


<%- include("../partials/footer") %></div>