<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create new Campground</h1>
        <div style="width: 30%;margin: auto; padding: 40px;">
            <form action="/campgrounds" method="POST" >
                <div class="form-group">
                    <input type="text" name="title" id="" class="form-control" placeholder="title">
                </div>
                <div class="form-group">
                    <input type="number" name="price" id="" class="form-control" placeholder="price" min="0.1" step="0.1">
                </div>
                <div class="form-group">
                    <input type="text" name="image" id="" placeholder="imageURL" class="form-control">
                </div>
                <div class="form-group">
                    <input type="text" name="description" id="" placeholder="description" class="form-control">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>


<%- include("../partials/footer") %>